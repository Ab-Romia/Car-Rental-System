          <li><a href="/office/all"><i class="fas fa-building"></i> Offices</a></li>
          <li><a href="/logout" class="btn-primary"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
        <% } else { %>
          <li><a href="/">Home</a></li>
          <li><a href="/#features">Features</a></li>
          <li><a href="/browse">Browse Cars</a></li>
          <li><a href="/login" class="btn-primary"><i class="fas fa-sign-in-alt"></i> Login</a></li>
          <li><a href="/register" class="btn btn-secondary"><i class="fas fa-user-plus"></i> Sign Up</a></li>
        <% } %>
      </ul>
    </div>
  </nav>
